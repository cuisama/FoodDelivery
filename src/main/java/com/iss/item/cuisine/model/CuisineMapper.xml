<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.iss.item.cuisine.dao.CuisineMapper" >

  <select id="list" resultType="Cuisine" >
    select * from fd_cuisine
  </select>
  
  <select id="listActive" resultType="Cuisine">
 	select * from fd_cuisine where state = 1 
  </select>
  
  <update id="updateState">
  	update fd_cuisine 
  		set state = #{newState} 
  	where id = #{id}
  </update>
  
  <update id="update">
  	update fd_cuisine 
  		set name = #{name}, price = #{price}, preferential = #{preferential}, discount = #{discount} 
  	where id = #{id}
  </update>
  
</mapper>